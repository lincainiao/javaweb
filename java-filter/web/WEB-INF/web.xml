<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>s1</servlet-name>
        <servlet-class>com.lin.servlet.ServletDemo01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s1</servlet-name>
        <url-pattern>/servlet/s1</url-pattern>
    </servlet-mapping>

<!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.lin.listener.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/servlet/login</url-pattern>
    </servlet-mapping>

<!--注销-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.lin.listener.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/servlet/logout</url-pattern>
    </servlet-mapping>

<!--过滤-->
    <filter>
        <filter-name>f1</filter-name>
        <filter-class>com.lin.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>f1</filter-name>
<!--        只要是/servlet下的任何请求，都会经过这个过滤器-->
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>f2</filter-name>
        <filter-class>com.lin.listener.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>f2</filter-name>
        <url-pattern>/sys/*</url-pattern>
    </filter-mapping>

<!--注册监听-->
    <listener>
        <listener-class>com.lin.listener.ListenerDemo01</listener-class>
    </listener>

</web-app>